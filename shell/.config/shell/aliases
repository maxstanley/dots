alias vi="nvim"
alias vim="nvim"
alias vimdiff="nvim -d"

alias ls="eza --color=auto --long --header --binary --group --group-directories-first --time-style=long-iso --git-ignore"
alias la="eza --color=auto --long --header --binary --group --group-directories-first --time-style=long-iso --git-ignore --all"
alias ll="eza --color=auto --long --header --binary --group --group-directories-first --time-style=long-iso --git-ignore --all"

alias tree="eza --color=auto --header --binary --group --group-directories-first --time-style=long-iso --git-ignore --tree"
alias treea="eza --color=auto --header --binary --group --group-directories-first --time-style=long-iso --git-ignore --tree --long"
alias treel="eza --color=auto --header --binary --group --group-directories-first --time-style=long-iso --git-ignore --tree --long"

alias cat="bat --paging=auto"
alias less="bat --paging=always"

alias cd="z"
